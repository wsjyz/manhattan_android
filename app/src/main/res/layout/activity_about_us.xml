<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.ivan.android.manhattanenglish.app.core.more.AboutUsActivity">

    <com.ivan.android.manhattanenglish.app.customviews.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/form_default_height"
        custom:titleText="@string/title_about_us"
        custom:showRight="false" />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_form_border"
        android:textColor="@color/common_text_color"
        android:textSize="16sp"
        android:padding="@dimen/more_info_list_item_padding"
        android:layout_margin="@dimen/common_margin"
        android:text="@string/about_us"/>

</LinearLayout>
