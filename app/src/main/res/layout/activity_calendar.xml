<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.ivan.android.manhattanenglish.app.core.more.CalendarActivity">

    <com.ivan.android.manhattanenglish.app.customviews.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/form_default_height"
        custom:titleText="@string/title_activity_calendar"
        custom:showRight="false" />

    <TextView
        android:id="@+id/notice_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/calendar_notice"
        android:layout_margin="@dimen/common_margin"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:textSize="@dimen/dimen_16sp"
        android:background="@drawable/drawable_border_light_gray"
        android:textColor="@color/common_text_color"
        android:drawablePadding="@dimen/common_margin"
        android:gravity="center_vertical"
        />

    <FrameLayout
        android:id="@+id/calendar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        android:background="@drawable/drawable_border_light_gray">

    </FrameLayout>

</LinearLayout>
