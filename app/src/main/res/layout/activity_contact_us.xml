<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.ivan.android.manhattanenglish.app.core.more.ContactUsActivity">

    <com.ivan.android.manhattanenglish.app.customviews.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/form_default_height"
        custom:titleText="@string/title_contact_us"
        custom:showRight="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/common_margin"
        android:background="@drawable/login_form_border">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_sh"
            android:textColor="@color/common_text_color"
            android:textSize="@dimen/contact_us_label_text_size"
            android:layout_margin="@dimen/contact_us_title_margin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/contact_us_title_margin"
            android:layout_marginRight="@dimen/contact_us_title_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common_text_color"
                android:text="@string/label_phone"
                android:textSize="@dimen/more_info_text_size"
                android:layout_marginRight="@dimen/common_margin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common_text_color"
                android:text="@string/detail_phone"
                android:textSize="@dimen/more_info_text_size"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/contact_us_title_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common_text_color"
                android:text="@string/label_address"
                android:textSize="@dimen/more_info_text_size"
                android:layout_marginRight="@dimen/common_margin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common_text_color"
                android:text="@string/detail_address_cn"
                android:textSize="@dimen/more_info_text_size"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@drawable/drawable_dash_line"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_us"
            android:textColor="@color/common_text_color"
            android:textSize="@dimen/contact_us_label_text_size"
            android:layout_margin="@dimen/contact_us_title_margin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/contact_us_title_margin"
            android:layout_marginRight="@dimen/contact_us_title_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common_text_color"
                android:text="@string/detail_address_us"
                android:textSize="@dimen/more_info_text_size"
                android:layout_marginLeft="62dp"
                android:layout_marginBottom="@dimen/contact_us_title_margin"
                />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
