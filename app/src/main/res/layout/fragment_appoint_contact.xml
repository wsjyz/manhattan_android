<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawable_border_light_gray">

    <EditText
        android:id="@+id/contact_user_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_input_text_height"
        android:textColor="@color/common_text_color"
        android:textColorHint="@color/hint_text_color"
        android:textSize="@dimen/dimen_18sp"
        android:hint="@string/contact_user"
        android:paddingLeft="@dimen/common_margin"
        android:background="@drawable/login_form_border"
        android:layout_margin="@dimen/common_margin"
        android:singleLine="true"
        />

    <EditText
        android:id="@+id/contact_address_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_input_text_height"
        android:textColor="@color/common_text_color"
        android:textColorHint="@color/hint_text_color"
        android:textSize="@dimen/dimen_18sp"
        android:hint="@string/contact_address"
        android:paddingLeft="@dimen/common_margin"
        android:background="@drawable/login_form_border"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginRight="@dimen/common_margin"
        android:singleLine="true"
        />

    <EditText
        android:id="@+id/contact_phone_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_input_text_height"
        android:textColor="@color/common_text_color"
        android:textColorHint="@color/hint_text_color"
        android:textSize="@dimen/dimen_18sp"
        android:hint="@string/contact_phone"
        android:paddingLeft="@dimen/common_margin"
        android:background="@drawable/login_form_border"
        android:inputType="phone"
        android:layout_margin="@dimen/common_margin"
        android:singleLine="true"
        />



</LinearLayout>