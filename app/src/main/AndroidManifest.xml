<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ivan.android.manhattanenglish.app" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ivan.android.manhattanenglish.app.core.welcome.WelcomeActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ivan.android.manhattanenglish.app.core.login.LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.ivan.android.manhattanenglish.app.core.login.RegisterActivity"
            android:label="@string/title_activity_register"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.ivan.android.manhattanenglish.app.core.login.FindPasswordActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_find_password" >
        </activity>
        <activity
            android:name="com.ivan.android.manhattanenglish.app.core.home.StudentHomeActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_student_home" >
        </activity>
        <activity
            android:name="com.ivan.android.manhattanenglish.app.core.more.MoreInfoActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_more_info" >
        </activity>
        <activity
            android:name="com.ivan.android.manhattanenglish.app.core.more.ContactUsActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_contact_us" >
        </activity>
        <activity
            android:name="com.ivan.android.manhattanenglish.app.core.more.AboutUsActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_about_us" >
        </activity>
        <activity
            android:name="com.ivan.android.manhattanenglish.app.core.info.InfomationActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_infomation" >
        </activity>
    </application>

</manifest>
